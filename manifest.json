{
	"manifest_version": 2,

	"name" : "Arbiter",
	"description": "Custom Metacritic averages from select publications.",
	"version": "0.1",

	"permissions": [
		"activeTab",
		"http://*/*",
		"https://*/*",
		"storage",
		"https://byroredux-metacritic.p.mashape.com/"
	],

	"browser_action": {
		//"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [{
		"js": ["jquery.min.js", "jquery-ui.min.js", "arbiter.js"],
		"matches": ["http://*/*", "https://*/*"],
		"run_at": "document_end"
		}]

	/*"icons": {"16": "icons/icon16.png",
			"48":"icons/icon48.png",
			"128":"icons/icon128.png"
			}*/
}